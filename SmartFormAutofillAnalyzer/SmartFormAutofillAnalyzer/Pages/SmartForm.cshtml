@page
@model SmartFormAutofillAnalyzer.Pages.SmartFormModel
@{
    ViewData["Title"] = "Smart Form Autofill";
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - SmartFormAutofillAnalyzer</title>

    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
</head>
<body class="bg-light">

    <!-- Navigation -->
    

    <!-- Main Form Section -->
    <div class="container py-5">
        <div class="row justify-content-center">
            <div class="col-lg-8">
                <div class="card shadow-lg border-0 rounded-4">
                    <div class="card-header bg-gradient bg-primary text-white text-center rounded-top-4">
                        <h2 class="mb-0">Smart Form Autofill (Gemini API)</h2>
                        <p class="mb-0 small">Use natural language to generate structured form fields</p>
                    </div>
                    <div class="card-body">

                        <form method="post">
                            <div class="mb-4">
                                <label class="form-label fw-semibold">Your Request</label>
                                <textarea asp-for="Input.UserInput" class="form-control form-control-lg shadow-sm"
                                          rows="5" placeholder="Describe your intent: 'Hi, I’m Raj…'"></textarea>
                            </div>
                            <div class="d-grid">
                                <button type="submit" class="btn btn-primary btn-lg">🔍 Analyze & Autofill</button>
                            </div>
                        </form>

                        @if (Model.Input?.Name != null)
                        {
                            <hr class="my-4" />
                            <h4 class="text-success fw-bold">✅ Extracted Form Data</h4>
                            <ul class="list-group list-group-flush mt-3">
                                <li class="list-group-item"><strong>Name:</strong> @Model.Input.Name</li>
                                <li class="list-group-item"><strong>Email:</strong> @Model.Input.Email</li>
                                <li class="list-group-item"><strong>Address:</strong> @Model.Input.Address</li>
                                <li class="list-group-item"><strong>Phone:</strong> @Model.Input.Phone</li>
                                <li class="list-group-item"><strong>Message:</strong> @Model.Input.Message</li>
                            </ul>
                        }
                    </div>
                </div>
            </div>
        </div>
    </div>

    <!-- Footer -->
  

    <!-- Scripts -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>
